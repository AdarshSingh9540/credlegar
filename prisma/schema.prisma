generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int              @id @default(autoincrement())
  email        String           @unique
  firstName    String?
  lastName     String?
  wallet       String?
  profile      String?
  profilePic   String?
  workExperiences WorkExperience[]
}

model WorkExperience {
  id            Int      @id @default(autoincrement())
  startDate     DateTime
  endDate       DateTime?
  company       String
  jobTitle      String
  jobDescription String
  skills        String[]
  transactionId String?
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
}